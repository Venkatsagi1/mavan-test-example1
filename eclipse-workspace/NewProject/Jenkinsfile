pipeline {
    agent any
    tools {
        maven 'Maven'     // Name from Jenkins configuration
        jdk 'JDK'         // Name from Jenkins configuration
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://your-git-repo-url.git'   // Update to your repo
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }
    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
    }
}
